 @font-face
   font-family 'Montserrat'
   font-style 400
   src url('../fonts/Montserrat-Regular.otf') format("opentype")

 @font-face
   font-family 'Montserrat-SemiBold'
   font-style 400
   src url('../fonts/Montserrat-SemiBold.otf') format("opentype")

 @font-face
   font-family 'Montserrat-Bold'
   font-style 400
   src url('../fonts/Montserrat-Bold.otf') format("opentype")


.flex
    display flex

body *
    font-family 'Montserrat'
    box-sizing border-box

img
    max-width 100%

input:focus,
input:active,
.slick-slide:active,
.slick-slide:focus
    outline none

color-blue = #12416D
color-lazure = rgba(0, 204, 255, 0.8)
color-dblue = #12416D

//header
.header_wrap
    max-width 1900px
    margin 0 auto 
//header_top
.header_top
    justify-content space-between
    align-items center
    height 47px
    background-color color-blue
    padding-left 64px

.header_left
    flex 1 0 auto

.header_social
    width 85px
    margin-right 24%
    

.header_social__link
    color #fff
    background-size contain
    background-position 50%
    display inline-block
    height 18px
    width 18px 
    background-repeat no-repeat
    
    &.fb
        background-image url('/static/img/fb.svg')

    &.inst
        background-image url('/static/img/inst.svg')

    &.youtube
        background-image url('/static/img/youtube.svg')
        padding 0 4px
        margin 0 7px
        border-right 2px solid #fff
        border-left 2px solid #fff

.header__num
    color #fff
    width 140px
    text-decoration underline

.mobile_menu
    display none

//nav
.nav
    flex 1 0 auto

.nav__link
    color #fff
    font-size 12px
    display inline-block
    padding 13px 15px 

//header_right
.header_right
    flex 1 0 auto

.btn__enter
    color #fff
    padding 13px 5px
    border-radius 5px
    border 1px solid #ffffff
    text-align center
    font-family 'Montserrat-SemiBold'
    width 104px

.lang
    margin-left 100px
    align-items center

.lang__item
    opacity 0.5
    font-size 14px
    color #fff
    margin-right 5px


    &:not(:last-child):after
        content '|'
        padding-left 5px

    &.active
        opacity 1

//header_bottom
.header_bottom
    justify-content space-between
    flex-wrap wrap
    align-items center
    padding-left 64px

.logo
    flex 1 0 auto

.nav__link-bottom
    position relative
    color color-blue
    padding 45px 27px

    &:hover::after
        position absolute
        content ''
        bottom: 0
        width 100%
        height 3px
        background-color rgba(0, 204, 255, 0.8)
        left 50%
        transform translateX(-50%)

.search
    flex 1 0 auto

.search__form
    max-width 308px
    padding 5px 15px
    border 1px solid #C8C8C8
    background-color #F4F3F5
    align-items: center

.search__input
    width 100%
    background-color transparent
    border 0
    color #000

.search__icon
    margin-left 10px
    background-image url('/static/img/search.svg')
    background-repeat no-repeat
    width 17px
    height 17px
    background-size contain

.cart
    flex 1 0 auto
    margin-left 2%

.cart__btn
    align-items: center
    padding-left 57px
    height 57px
    background-image url('/static/img/cart.svg')
    background-position 0 100%
    background-repeat no-repeat 
    color color-blue
    cursor pointer

.cart__qty
    color color-lazure

//main banner
.main_banner
    background-image url('/static/img/banner.png')
    background-size cover
    background-position 50%
    justify-content flex-end 
    
.main_banner_right
    max-width 950px
    margin-right 50px
    overflow hidden 
    padding-bottom: 120px



.main_banner_btns
    justify-content flex-end 
    margin 50px 0

.main_banner_btn
    padding  15px
    color #fff
    border 2px solid #ffffff
    text-align center
    cursor pointer

    &.active
        background-color color-lazure

.main_banner__h1
    color #fff
    font-size 120px
    text-transform uppercase
    font-family 'Montserrat-Bold' 

.slogan
    color #fff
    font-size 36px
    text-transform uppercase

.main_banner__title
    color #fff
    font-size 26px
    text-transform uppercase

.watch_video
    width 50px
    height 50px
    background-size contain
    background-image url('/static/img/play.svg')
    cursor pointer
    margin 20px 0 36px

.main_banner_slider
    width 100%
    // padding: 0 5px 0 4px

    .slick-list
        overflow visible 

.main_banner_slider__item
    position relative
    overflow hidden
    transition: .3s
    filter: grayscale(1)
    z-index 22

    &:hover  
        transition: .3s
        transform: scale(1.2)
        filter: grayscale(0)
        z-index 66

.main_banner_slider_arrows
    margin-top 30px
    
.main_banner_slider_arrow
    background-image url('/static/img/arr_left.svg')
    background-position 50%
    background-repeat no-repeat
    background-size 6px
    width 43px
    height 43px
    border 1px solid #ffffff
    margin-right 18px
    cursor pointer

    &.next
        transform: rotate(180deg)

//school

//style from project
.section__heading 
    font-size: 28px
    font-weight: 400
    letter-spacing: 2px
    text-align: left
    position: relative
    display: inline
    color: #434a54
    transition: .3s all ease
    border-bottom: 2px solid #434a54
    cursor pointer
 
    &:hover 
        color: color-lazure
        border-color color-lazure
        -webkit-transition: .3s all ease
        transition: .3s all ease

@media screen and (min-width: 768px) 
    .section__heading 
        border-bottom: 2px solid #434a54
        font-size: 42px
        letter-spacing: 4px
//style from project

.section
    max-width 1900px
    padding 100px 15px 15px
    margin: 0 auto

//events
.events
    margin 44px -15px 0
    flex-wrap: wrap
    justify-content space-between

.event_wrap
    flex 0 0 33.33%
    max-width 33% 
    padding 0 15px

@media screen and (min-width: 1500px)
    .event_wrap
        max-width 546px

.event
    padding 24px 26px 68px
    border 1px solid #66707F

.event__type
    color color-lazure
    font-size 20px
    line-height 24px
    text-align center

.event_description
    margin-top 20px

.event__img
    width 180px
    height 180px
    border-radius 50%
    background-color #C4C4C4

.event_info
    margin-left 15px

.event_info__line
    flex-wrap wrap
    margin-bottom 42px
    justify-content space-between

.event__title
    font-size 20px
    color #66707F

.event__title-height
    line-height 2

.event_info__text
    color color-dblue
    font-size 24px
    line-height 29px
    text-align right
    max-width 144px
    flex: 1


.event_theme
    margin-bottom 90px

.event__name
    font-size 36px
    color color-dblue 
    line-height 1
    text-align right

.event_btns
    justify-content space-around

.event__btn
    display inline-block
    max-width 180px
    width 100%
    border 1px solid color-lazure
    text-transform uppercase
    color color-lazure
    padding 22px 5px
    text-align center
    font-size 14px
    margin: 0 3px

    &:hover
        background-color color-lazure
        color #fff
    

.event__btn-lazure
    background-color color-lazure
    color #fff

    &:hover
        color color-lazure
        background-color #fff

//gallery
.gallery_slider
    width 100%
    margin-top 75px

    .slick-list
        padding-right 10%

    .slick-track 
        display flex


.gallery_slider__item
    display flex!important
    height auto
    align-items center
    justify-content center

.gallery_slider_arrow
    position absolute
    top 50%
    width 57px
    height 57px
    background-image url('/static/img/slider-arrow.svg')
    background-position 50%
    background-size cover 
    background-repeat no-repeat
    cursor pointer
    z-index 999

    &.prev
        left 0

    &.next
        right 0
        transform: rotate(180deg)


@media screen and (max-width 1200px)
    .mobile_menu
        display block
        flex 1 0 auto
        padding-top: 18px

        span
            color color-dblue
            border-top 3px solid color-dblue
            padding-top: 12px

    .header_top,
    .nav,
    .lang
        display none

    .search
        width 100%

    .search__form
        max-width 320px
        margin 15px auto
        flex-direction row-reverse
        background-color transparent
        border 0
        border-bottom 1px solid #c8c8c8

    .search__icon
        margin 0 10px 0 0


    .logo
        text-align center
    
    .logo__link
        display inline-block
        max-width 150px

    .cart
        justify-content flex-end
        padding-right 15px
    
    .cart__btn
        position relative
        font-size 0

    .cart__qty
        position absolute
        font-size 14px
        background-color color-lazure
        color #fff
        border-radius: 50%
        right -6px
        top 8px
        padding: 3px 

    .main_banner_right
        margin 0 20px

    .slogan
        text-align center
        font-size 26px

    .main_banner__h1
        font-size 80px
        text-align center

    .main_banner__title
        font-size 23px
        text-align center

    .events
        justify-content center

    .event_wrap
        margin-bottom 30px
        max-width 400px
        flex 0 0 400px

    .gallery_slider .slick-dots
        padding 6px 0
        display flex
        width auto
        left 50%
        transform translateX(-50%)
        bottom 0
        background-color rgba(255,255,255,0.7)
        box-shadow 0 0 6px 2px rgba(255,255,255,0.7)

    .gallery_slider 
        margin-top 30px

    .gallery_slider__item
        height 550px
        overflow hidden

    .gallery_slider .slick-dots li 
        font-size 0
        width 15px
        height 15px
        border-radius 50%
        border 1px solid  color-dblue

        &.slick-active
            background-color color-lazure

@media screen and (max-width 992px)
    .main_banner_slider,
    .main_banner_slider_arrows
        display none

    .main_banner_right
        padding-bottom 0

    .watch_video
        margin-top 100px

    .gallery_slider
        margin 30px -15px 0
        width auto

    .gallery_slider_arrow
        background-image url('/static/img/arr.png')
        width 22px
        height 22px

        &.prev 
            left 10px

        &.next
            right 10px

@media screen and (max-width 768px)
    .slogan
        font-size 16px

    .main_banner__title
        font-size 17px
    
    .main_banner__h1
        font-size 27px
        margin 10px 0

    .main_banner_btns
        display none

    .main_banner_right
        padding-top 50px

    .event__img
        width 130px
        height 130px

    .event_info__text
        font-size 18px
    
    .event__title
        font-size 16px

    .event__name
        font-size 18px
        text-align left
        padding-left 10px

    .event__title-height
        line-height 1

    .event__btn
        padding 12px 5px

@media screen and (max-width 576px)
    .header_bottom
        padding: 10px 15px

    .logo__link
        max-width 110px

    .cart__btn
        padding-left 37px
        height 37px
        background-size contain

    .cart__qty
        right -10px
        top 0

    .search__input
        font-size 14px

    .mobile_menu span
        font-size 12px

    .main_banner_right
        margin 0 5px

    .main_banner__title,
    .event_info__text
        font-size 16px

    .slogan
        font-size 12px

    .event
        padding 15px 10px

    .event__img
        width 76px
        height 76px

    .event_info__line
        margin-bottom 20px

    .event_info__text
        line-height 1

    .events .slick-list
        padding-right 5%
 
    .event_wrap
        padding: 0 10px