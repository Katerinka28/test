body 
  fs 12px
*
  ma 0 
  pa 0 
:root 
  --blue #d9edf7
  --red #d9534e
  --red-light #f2dede
  --green #5cb85c
  --green-light #dff0d8
  --white #fff
  --dark-blue #5f739c
  color var(--white)

.poll
  fs 1.5rem
  perspective 300px
  transform-style preserve-3d
  perspective-origin center
  &__question
    d flex
    ai center 
    f-dir column
    // transform: translate3d(10px, 10px, 10px)
   
  &__answer 
    color var(--white)
    d flex
    ai center 
    // jc center 
    f-dir column
    &--affirmative
      --finish-bg var(--green-light)
      --answer-bg var(--green) 
    &--negative 
      --finish-bg var(--red-light)
      --answer-bg var(--red)       
  &__wrap 
    display: grid
    grid-template-columns: repeat(auto-fit,minmax(80px, 1fr));
    grid-gap: 2px;
    grid-auto-rows: minmax(80px, auto);
    grid-auto-flow: dense;
    // grid-template-columns: repeat( auto-fill, minmax(250px, 1fr) )
.text       
  br-radius 5px
  ta center
  pa 5px
.answer 
  color var(--white)
  bg var(--answer-bg)
  &:hover
    animation: 1s identifier infinite
.question
  w 100%
  bg var(--blue) 
  color var(--dark-blue)
  tr 0.5s
  &:hover 
    tr 0.5s
    filter: drop-shadow(8px 9px 5px var(--dark-blue) )
.finish
  bg var(--finish-bg)
  color var(--answer-bg)  
  &:hover 
    tr 0.5s
    filter: invert(100%)

@keyframes identifier 
  0%
    transform matrix(1.00,0.00,0.00,1.00,0,0)
  25%
    transform: matrix(1.03 ,0.17,-0.17,1.03 ,0,0)
  50%
    transform matrix(1.00,0.00,0.00,1.00,0,0)
  75%
    transform: matrix(1.03 ,-0.17,0.17,1.03 ,0,0)
  100%
    transform matrix(1.00,0.00,0.00,1.00,0,0)
